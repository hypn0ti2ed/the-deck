{
  "name": "the-deck",
  "version": "1.0.0",
  "description": "A self-hosted web application for managing projects, calendar events, tasks, and ideas",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "client": "npm run dev --prefix client",
    "build": "npm run build --prefix client",
    "install-all": "npm install && npm install --prefix client"
  },
  "keywords": ["project-tracker", "task-manager", "self-hosted"],
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}
